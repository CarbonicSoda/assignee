{
	"compilerOptions": {
		"strict": true,

		"target": "ESNext",
		"module": "ESNext",

		"isolatedModules": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,

		"noEmit": true,
		"sourceMap": true,

		"jsx": "preserve",
		"jsxImportSource": "solid-js",

		"types": ["vite/client"],

		"noFallthroughCasesInSwitch": true
	}
}
