{
	"compilerOptions": {
		"strict": true,

		"target": "ESNext",
		"module": "NodeNext",

		"baseUrl": "src",
		"isolatedModules": true,
		"esModuleInterop": true,
		"moduleResolution": "nodenext",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,

		"noEmit": true,
		"sourceMap": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},

	"include": ["src/**/*"],
	"exclude": ["src/generated/**/*"]
}
