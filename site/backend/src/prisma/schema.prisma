generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./assignee.db"
}

model User {
  uid   Int    @id
  email String @unique
  name  String

  password Password?
  Session  Session[]

  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Password {
  hash Bytes
  salt Bytes

  uid  Int  @id
  user User @relation(fields: [uid], references: [uid], onDelete: Cascade)

  updated DateTime @updatedAt
}

model Session {
  sid  Int   @id
  hash Bytes
  salt Bytes

  uid  Int
  user User @relation(fields: [uid], references: [uid], onDelete: Cascade)

  created DateTime @default(now())

  @@index([uid])
}
